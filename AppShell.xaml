<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkoutApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkoutApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="WorkoutApp">
    
    

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:HomePage}"/>
        <ShellContent ContentTemplate="{DataTemplate local:WorkoutPage}"
                      Route="workout"/>
        <ShellContent ContentTemplate="{DataTemplate local:ExercisePage}" Route="exercise" />
    </FlyoutItem>
    <FlyoutItem Title="All Exercises" x:Name="allExercisesItem">
        <ShellContent ContentTemplate="{DataTemplate local:WorkoutPage}" Route="workout"/>
    </FlyoutItem>

</Shell>
