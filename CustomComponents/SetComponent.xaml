<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.CustomComponents.SetComponent">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentView.Resources>
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label x:Name="weightLabel" Text="Weight:"/>
            <Entry x:Name="set1Weight" Text="{Binding Set1Weight}" WidthRequest="60"
           Keyboard="Numeric"/>
            <Label x:Name="repLabel" Text="Reps" />
            <Entry x:Name="set1Reps" Text="{Binding Set1Reps}" WidthRequest="60"
           Keyboard="Numeric"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
